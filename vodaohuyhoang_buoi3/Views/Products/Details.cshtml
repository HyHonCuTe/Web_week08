@model Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4">Chi tiết sản phẩm</h1>

    <div class="card shadow-sm p-4">
        <h4 class="text-primary">Thông tin sản phẩm</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Price)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Price) VND</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Description)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.ImageUrl)</dt>
            <dd class="col-sm-9">
                <img src="@Model.ImageUrl" alt="Hình ảnh sản phẩm" class="img-fluid rounded shadow" style="max-width: 200px; height: auto;">
            </dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Category)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>
        </dl>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Chỉnh sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>